  var Config = class {
    constructor(path, defaults) {
      this.path = path;
      this.defaults = defaults;
      this.load();
      this.save();
    }
    get(key) {
      if (!this.hasKey(key)) {
        throw new Error(`Key "${key}" doesn't exist`);
