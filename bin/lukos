    }
  };

  // src/pick/pick.ts
  function pick(keys, translations) {
    const picked = {};
    keys.forEach((key) => {
      picked[key] = {};
      translations.forEach((translation) => {
        picked[key][translation.path] = translation.get(key);
      });
    });
    return picked;
  }

