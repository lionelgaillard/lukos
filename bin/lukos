  // src/copy/copy.ts
  function copy(source, target, translations) {
    for (const translation of translations) {
      const value = translation.get(source);
      if (value) {
        if (translation.has(target)) {
          translation.delete(target);
        }
        translation.add(target, value);
      }
    }
  }

  // src/copy/copy.command.ts
  var CopyCommand = class {
    async run(source, target, translationsGlob) {
      const translations = await loadTranslations(translationsGlob);
      await copy(source, target, translations);
      await saveTranslations(translations);
    }
  };

  // src/export/csv.ts
  var VALUE_SEPARATOR = ";";
  var LINE_SEPARATOR = "\n";
  function toCsv(files) {
    const translations = extractValues(files);
    return makeHeaders(translations) + makeRows(translations);
  }
  function makeHeaders(translations) {
    const first = Object.values(translations)[0];
    const locales = Object.keys(first).map((key) => key.toUpperCase());
    return formatRow(["Key", ...locales]);
  }
  function makeRows(translations) {
    return Object.keys(translations).reduce((rows, key) => {
      const values = Object.values(translations[key]);
      return rows + formatRow([key, ...values]);
    }, "");
  }
  function formatRow(values) {
    return values.map(formatCell).join(VALUE_SEPARATOR) + LINE_SEPARATOR;
  }
  function formatCell(value) {
    return `"${value || ""}"`;
  }

  // src/export/export.command.ts
  var ExportCommand = class {
    async run(output, translationsGlob) {
      const files = await loadTranslations(translationsGlob);
